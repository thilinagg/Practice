
@{
    ViewBag.Title = "LogIn";
}

<style>
    .error {
        color: #F14548;
        font-size: 12px;
    }

    .valid {
        color: green;
    }

    b {
        color: blue;
    }
</style>

<h2>LogIn</h2>

<form id="userReg">
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="email" name="email" placeholder="Email">
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="psd" placeholder="Password">
    </div>
  </div>


  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Sign in</button>
    </div>
  </div>

</form>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script>



    $('#userReg').validate({
       
        rules: {
            email: {
                required: true,
                email: true
            }
        },

        messages: {
            email: {
                required: 'Please enter an email address',
                email: 'Please enter valied email address'
            }
        },

        submitHandler: function (form) {

            var submitData = {
                email: $('#email').val(),
                hashedPassword: $('#psd').val()
            }

            $.ajax({
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                cache: false,
                async: false,
                type: 'POST',
                data: "{submitData:" + JSON.stringify(submitData) + "}",
                url: "/User/Register",
                success: function (msg) {
                    if (msg.saveUser.id > 0) {
                        alert(msg.saveUser.email + " Registered succesfully...!!!");

                    }
                    else {
                        alert('warning' + "Registering unsucsessful...!!!");

                    }
                },
                error: function (xhr, errorThrown) {
                    alert('Error...!!! Internal - 01');
                }
            });
        }
    });

</script>